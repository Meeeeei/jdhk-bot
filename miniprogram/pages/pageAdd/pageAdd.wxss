/* miniprogram/pages/pageAdd/pageAdd.wxss */
@import "../../style/guide.wxss";

.request_text{
  width: 100%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  /* border-left: 1px solid rgba(0, 0, 0, 0.1);
  border-right: 1px solid rgba(0, 0, 0, 0.1); */
  background: #fff;
  margin-top: 5px;
  margin-bottom: 5px;
}

.picker {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  height: 60rpx;
  width: 100%;
  background: #fff;
  border: none;
  border-left: none;
  border-right: none;
  flex-direction: row;
  align-items: flex-start;
  transition: all 300ms ease;
}

.picker-text, .tunnel-text {
  width: 100%;
  font-size: 34rpx;
  color: #007aff;
}

.scroll{
  margin-top: 20rpx;
}

.headline {
  font-size: 34rpx;
  font-weight: bold;
  color: #555;
  line-height: 40rpx;
}